
# FastGrapher Backend - Environment Configuration
# Copy this file to .env and update the values

# Application
NODE_ENV=production
PORT=8080
HOST=0.0.0.0

# MongoDB Connection
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/fastgrapher?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@fastgrapher.com

# Frontend URL
FRONTEND_URL=https://www.fastgrapher.com
